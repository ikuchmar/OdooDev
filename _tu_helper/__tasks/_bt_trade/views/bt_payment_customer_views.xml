<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bt_payment_customer_view_tree">
        <field name="name">bt.payment.customer.view.tree</field>
        <field name="model">bt.payment.customer</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Name"/>
                <field name="partner_id" string="Partner"/>
                <field name="so_id" string="Sale order"/>
                <field name="total_amount" string="Total amount"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="bt_payment_customer_view_form">
        <field name="name">bt.payment.customer.view.form</field>
        <field name="model">bt.payment.customer</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Name"/>
                        <field name="partner_id" string="Partner"/>
                        <field name="so_id" string="Sale order"/>
                        <field name="total_amount" string="Total amount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>