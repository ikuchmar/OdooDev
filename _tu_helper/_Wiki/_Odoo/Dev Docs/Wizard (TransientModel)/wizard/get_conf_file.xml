<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="save_conf_master_view_xml_done" model="ir.ui.view">
        <field name="name">o1c.save.conf.form</field>
        <field name="model">o1c.save.conf</field>
        <field name="arch" type="xml">
            <form string="Configuration download">
                <group cols="2">
                    <div>
                        <field name="file_name" invisible="1" />
                        <label for="xml_file" string="The XML file has been successfully generated." />
                        <field name="xml_file" filename="file_name" nolabel="1" />
                    </div>
                </group>
                <group>
                    <field name="description"/>
                </group>
                <footer>
                    <button special="cancel" string="Close" type="object" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
